              <%= link_to " Log in", new_session_path %>
            </li>
            <li id="about"><a>About</a></li>
          </ul>
        </div>
      <% end %>
    </header>

  <% flash.each do |name, msg| %>
  <% content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

    <%= yield %>

