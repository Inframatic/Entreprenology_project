<%= form_for @account do |f| %>
  <% if @account.errors.any? %>
    <div class="error_message">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @account.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :industry %><br>
    <%= f.text_field :industry %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %> 
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %> 
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %> 
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="action">
    <%= f.submit "Save", class: "button radius" %>
  </div>
<% end %>